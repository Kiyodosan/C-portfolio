#include <iostream>
#include <cmath>

using namespace std;

// Stock market simulator
// Following along with https://www.youtube.com/watch?v=1S__GRWtyvg

int main()
{
    float a;                                // a = amount made
    float p = 10000;                        // p = principle amount (how much you started with)
    float r = .01;                          // r = rate
    
    for (int day = 1; day <= 20; day++)
        a = p * pow(1 + r, days);           // "power" function (found in <cmath>) used to calculate a simulated rate
        cout << day << a << endl;
}
